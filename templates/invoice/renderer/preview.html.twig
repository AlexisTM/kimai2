<div class="row">
    <div class="col-xs-12">
        <h2 class="page-header">
            <span>{{ 'invoice.preview'|trans }}</span>
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 table-responsive">

        <p>{{ 'invoice.preview_info'|trans  }}</p>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.date'|trans }}</th>
                <th>{{ 'label.activity'|trans }}</th>
                <th>{{ 'label.hours'|trans }}</th>
                <th>{{ 'label.rate'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for entry in model.calculator.entries %}
                <tr>
                    <td>{{ entry.begin|date_short }}</td>
                    <td>{{ entry.activity.name }} / {{ entry.activity.project.name }}</td>
                    <td>{{ entry.duration|duration }}</td>
                    <td>{{ entry.rate|money(model.calculator.currency) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        {{ form_start(form, { 'attr': {'target': '_invoice'} }) }}
        {{ form_widget(form, { 'attr': {'class': 'hidden'} }) }}
        <button class="btn btn-success pull-right" type="submit">
            <i class="{{ 'print'|icon }}"></i> {{ 'button.print'|trans }}
        </button>
        {{ form_end(form) }}
    </div>
</div>